<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="my.awesome.Garaz.Accountfrag">

  <TextView
    android:layout_margin="10dp"
    android:text="My Account"
    android:textSize="25sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#fff"
        android:elevation="@dimen/cardview_default_elevation"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_account_circle_black_24dp"
            android:tint="#34D0ff"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile"

            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:text="My Profile" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#fff"
        android:elevation="@dimen/cardview_default_elevation"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_directions_car_black_24dp"
            android:tint="#34D0ff"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cars"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:text="My CARS" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#fff"
        android:elevation="@dimen/cardview_default_elevation"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_subscriptions_black_24dp"

            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/subscription"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:text="SUBSCRIPTION" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#fff"
        android:elevation="@dimen/cardview_default_elevation"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_reply_black_24dp"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/refer"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:text="REFER AND EARN" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#fff"
        android:elevation="@dimen/cardview_default_elevation"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_history_black_24dp"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/order"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:text="ORDER HISTORY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#fff"
        android:elevation="@dimen/cardview_default_elevation"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_notifications_active_black_24dp"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/notification"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:text="NOTIFICATION" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#fff"
        android:elevation="@dimen/cardview_default_elevation"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_help_outline_black_24dp"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/help"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:text="HELP AND SUPPORT" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#fff"
        android:elevation="@dimen/cardview_default_elevation"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_share_black_24dp"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/share"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:text="SHARE MR.GARAZ" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#fff"
        android:elevation="@dimen/cardview_default_elevation"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_settings_power_black_24dp"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/logout"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:text="LOGOUT" />
    </LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:text="Terms And Condition" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:text="Privacy Policy" />

</LinearLayout>
</LinearLayout>