<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="my.awesome.Garaz.Homefrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:id="@+id/lin1"
        android:background="#ffffff"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/enter_location"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="6dp"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Enter Location"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

        <ImageButton
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:id="@+id/select_car"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/hundaii"
            android:background="@android:color/white"/>

          <TextView
              android:id="@+id/selected_car_name"
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Car name"
              android:background="@android:color/black"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:textColor="@android:color/white"
              android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <LinearLayout
        android:background="#4FC7BCBC"

        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/holo_red_dark"/>

    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="What are you looking for?"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="Select Services and Checkout easily"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="@android:color/holo_red_dark"/>

        <LinearLayout

            android:orientation="vertical"
            android:id="@+id/linear1"
            android:background="#4FC7BCBC"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec"
                android:layout_margin="5dp"
                tools:listitem="@layout/list"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    </LinearLayout>


