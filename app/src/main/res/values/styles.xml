<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/spacing_standard_new</item>

        <item name="android:padding">@dimen/spacing_middle</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:background">@drawable/bg_rounded_border_edittext</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="android:paddingBottom">@dimen/spacing_standard</item>
        <item name="android:paddingStart">@dimen/spacing_standard</item>
        <item name="android:paddingEnd">@dimen/spacing_standard</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="cornerRadius">@dimen/spacing_xlarge</item>

    </style>

    <style name="MaterialButtonStyle.Filled">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/commonColorWhite</item>
        <item name="rippleColor">@color/white</item>
    </style>
    <style name="FontMedium">

    </style>
    <style name="TextInputLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:background">@color/background_color</item>
        <item name="android:textAppearance">@style/FontMedium</item>
        <item name="android:paddingStart">@dimen/spacing_control_half</item>
        <item name="android:paddingEnd">@dimen/spacing_control_half</item>
        <item name="android:layout_marginStart">@dimen/spacing_standard_new</item>
    </style>
    <style name="cardNumberEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_rounded_border_edittext</item>
        <item name="android:imeOptions">actionNext</item>

        <item name="android:letterSpacing" tools:targetApi="lollipop">0.2</item>
        <item name="android:maxLength">10</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>
